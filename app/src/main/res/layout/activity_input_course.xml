<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputCourses.InputCourseActivity">

  <TextView
      android:id="@+id/textView"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Enter class history below:"
      android:textSize="25dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.022" />

  <androidx.recyclerview.widget.RecyclerView
      android:id="@+id/courses_view"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="16dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toTopOf="@+id/input_year"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      tools:layout_constraintHorizontal_bias="0.0" />

  <!--  <EditText-->
<!--      android:id="@+id/input_quarter"-->
<!--      android:layout_width="wrap_content"-->
<!--      android:layout_height="wrap_content"-->
<!--      android:layout_marginStart="16dp"-->
<!--      android:layout_marginBottom="16dp"-->
<!--      android:ems="5"-->
<!--      android:hint="Quarter"-->
<!--      android:inputType="text"-->
<!--      android:textSize="@dimen/list_text_size"-->
<!--      app:layout_constraintBottom_toTopOf="@+id/add_course_button"-->
<!--      app:layout_constraintEnd_toEndOf="parent"-->
<!--      app:layout_constraintHorizontal_bias="0.0"-->
<!--      app:layout_constraintStart_toEndOf="@+id/input_year"-->
<!--      app:layout_constraintTop_toTopOf="parent"-->
<!--      app:layout_constraintVertical_bias="1.0" />-->

  <Spinner
      android:id="@+id/input_year"
      android:layout_width="101dp"
      android:layout_height="40dp"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toTopOf="@+id/add_course_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/input_subject"
      app:layout_constraintVertical_bias="0.531" />

  <EditText
      android:id="@+id/input_subject"
      android:layout_width="80dp"
      android:layout_height="40dp"
      android:layout_marginStart="5dp"
      android:layout_marginBottom="16dp"
      android:ems="5"
      android:hint="Subject"
      android:inputType="text"
      android:textSize="@dimen/list_text_size"
      app:layout_constraintBottom_toTopOf="@+id/add_course_button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/fidget_spinner"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <EditText
      android:id="@+id/input_course_number"
      android:layout_width="84dp"
      android:layout_height="40dp"
      android:layout_marginBottom="16dp"
      android:ems="4"
      android:hint="Course #"
      android:inputType="text"
      android:textSize="@dimen/list_text_size"
      app:layout_constraintBottom_toTopOf="@+id/add_course_button"
      app:layout_constraintEnd_toEndOf="@+id/add_course_button"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/input_subject"
      app:layout_constraintTop_toTopOf="@+id/input_subject"
      app:layout_constraintVertical_bias="1.0" />

  <Spinner
      android:id="@+id/fidget_spinner"
      android:layout_width="93dp"
      android:layout_height="40dp"
      android:layout_marginStart="5dp"
      app:layout_constraintBottom_toBottomOf="@+id/input_year"
      app:layout_constraintStart_toEndOf="@+id/input_year"
      app:layout_constraintTop_toTopOf="@+id/input_year" />

  <Button
      android:id="@+id/add_course_button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:text="Add Course"
      android:onClick="onAddCourseClicked"
      app:layout_constraintBottom_toTopOf="@+id/button"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent" />
<!--  android:onClick="onAddNoteClicked"-->


  <Button
      android:id="@+id/button"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginEnd="16dp"
      android:layout_marginBottom="16dp"
      android:onClick="onDoneClicked"
      android:text="Done"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />
  <!--      android:onClick="onDoneClicked"-->

</androidx.constraintlayout.widget.ConstraintLayout>